<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/math_operation"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:text="0"/>

    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:textColor="@android:color/white"
        android:gravity="end"
        android:ellipsize="end"
        android:textSize="30sp"
        android:singleLine="true"/>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btm_clr"
                style="@style/ActionButtom"
                android:text="AC"></TextView>

            <TextView
                android:id="@+id/btm_prsnt"
                style="@style/ActionButtom"
                android:text="%"></TextView>

            <TextView
                android:id="@+id/btm_plms"
                style="@style/ActionButtom"
                android:text="+/-"></TextView>

            <TextView
                android:id="@+id/btm_div"
                style="@style/ActionButtom"
                android:text="/"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btm_7"
                style="@style/NumberButtom"
                android:text="7"></TextView>

            <TextView
                android:id="@+id/btm_8"
                style="@style/NumberButtom"
                android:text="8"></TextView>

            <TextView
                android:id="@+id/btm_9"
                style="@style/NumberButtom"
                android:text="9"></TextView>

            <TextView
                android:id="@+id/btm_mult"
                style="@style/ActionButtom"
                android:text="X"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btm_4"
                style="@style/NumberButtom"
                android:text="4"></TextView>

            <TextView
                android:id="@+id/btm_5"
                style="@style/NumberButtom"
                android:text="5"></TextView>

            <TextView
                android:id="@+id/btm_6"
                style="@style/NumberButtom"
                android:text="6"></TextView>

            <TextView
                android:id="@+id/btm_mns"
                style="@style/ActionButtom"
                android:text="─"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btm_1"
                style="@style/NumberButtom"
                android:text="1"></TextView>

            <TextView
                android:id="@+id/btm_2"
                style="@style/NumberButtom"
                android:text="2"></TextView>

            <TextView
                android:id="@+id/btm_3"
                style="@style/NumberButtom"
                android:text="3"></TextView>

            <TextView
                android:id="@+id/btm_pls"
                style="@style/ActionButtom"
                android:text="+"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_dot"
                style="@style/ActionButtom"
                android:text="."></TextView>
            <TextView
                android:id="@+id/btm_0"
                style="@style/NumberButtom"
                android:text="0">
            </TextView>

            <TextView
                android:id="@+id/btm_bck"
                style="@style/ActionButtom"
                android:text="⌫"></TextView>

            <TextView
                android:id="@+id/btm_eq"
                style="@style/EqualButtom"
                android:text="="></TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>